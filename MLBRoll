    tile = true, tileSize = 32, edgeSize = ROUNDED_EDGE_SIZE,
    insets = MAIN_INSETS
})
frame:SetBackdropColor(0.10, 0.13, 0.19, 0.98)
frame:SetToplevel(true)
frame:SetUserPlaced(true)
tinsert(UISpecialFrames, frame:GetName())

