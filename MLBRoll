SlashCmdList["MLBROLL"] = function()
    if frame:IsShown() then
        frame:Hide()
    else
        frame:Show()
        if gameContent.editBox then
            gameContent.editBox:ClearFocus()
        end
        UpdateGameTab()
    end
end
