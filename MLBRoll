local signupTimeLeft, rollTimeLeft = 20, 60
local tiebreakActive = false
local tiebreakType = nil -- "winner" or "loser"
local tiebreakPlayers = {}
local tiebreakOriginalValue = nil
local tiebreakRolls = {}

if not MLBRollDB then MLBRollDB = {} end

